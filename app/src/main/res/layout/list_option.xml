<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="36dp"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/gray"
    >
    <ImageView
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/optionIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/notify_description"
        android:src="@drawable/map"/>
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/optionTitle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/optionIcon"
        android:layout_toStartOf="@+id/optionNotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_fonts"/>
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/optionNotify"
        android:layout_alignParentEnd="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/blue_frame"
        android:layout_marginEnd="15dp"
        android:contentDescription="@string/notify_description"
        />
</RelativeLayout>